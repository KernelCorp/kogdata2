= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :time
    = f.text_field :time
  .field
    = f.label :event_type
    = f.text_field :event_type
  .field
    = f.label :budget
    = f.number_field :budget
  .field
    = f.label :customer
    = f.text_field :customer
  .actions
    = f.submit 'Save'
