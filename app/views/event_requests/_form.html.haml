= form_for @event_request do |f|
  - if @event_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event_request.errors.count, "error")} prohibited this event_request from being saved:"
      %ul
        - @event_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :event
    = f.text_field :event
  .field
    = f.label :photographer
    = f.text_field :photographer
  .actions
    = f.submit 'Save'
