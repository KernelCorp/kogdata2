.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      %a{:class => 'brand', :href=> '/'}
        kogdata
        %sup beta
      %ul.nav.pull-right
        -if user_signed_in?
          %li.calendar-icon
            = link_to '', :root
          %li.messages-icon
            %a{:href => :conversations}
              %p
                0
          %li.user-name
            %p
              = link_to current_user.name, current_user
          %li.avatar
            = image_tag current_user.avatar(:thumb)
          %li.splitter
          %li.exit
            = link_to t(:sign_out), destroy_user_session_path
        -else
          %li
            = link_to t(:sign_in), new_customer_session_path
          %li
            = link_to t(:sign_up), new_customer_registration_path
.navbar_padding_elem
